html,body,ul,li,h1,h2,h3,p,cite,q
	margin 0
	padding 0

body
	font-family: "Roboto Mono",Monaco,Consolas,"Courier New",monospace, Helvetica, Arial, sans-serif
	position relative
	
ul,li
	list-style none
	
h1
	font-size 72px
	text-align center
	font-weight 800
	color #fff
	
h2
	font-size 36px
	text-transform uppercase
	text-align center

p.caption
	font-size 24px
	color #fff
	font-weight 800
	letter-spacing 5px
	
p.large
	font-size 16px
	color #fff
	text-align center

p.big
	font-size 14px
	line-height 24px
	text-align center
	color #999
	
p.small
	font-size 12px
	color #999
a
	text-decoration none

a.btn
	background #AA9144
	color #fff
	display inline-block
	font 800 10px/18px "Jaapokki", Helvetica, Arial, sans-serif
	padding 8px 40px 
	border-radius 20px
	transition all .3s
	&:hover
		background #fff
		color #000
		
.clearfix:after
	content ""
	display block
	clear both