.blade-testimonials
	background bgColor
	.blade-testimonials-wrap
		padding 60px 0
		p.big
			width 720px
			margin 40px auto
		.blade-testimonials-slide
			width 1000px
			padding 0 100px
			margin 0 auto
			position relative
			.blade-testimonials-slide-viewpoint
				width 1000px
				height 365px
				overflow hidden
				// border 1px solid
				background #fff
				.blade-testimonials-slide-wrap
					width 3000px
					// border 1px solid
					.blade-testimonials-slide-item
						box-sizing border-box
						float left
						width 1000px
						padding 82.5px 100px
						.blade-testimonials-slide-img
							float left
							img
								border-radius 50%
						.blade-testimonials-slide-cite-contacts
							padding-left 200px
							cite
								display block
								font-weight 800
							q
								display block
								padding 40px 0
							.blade-testimonials-slide-contacts
								.iconfont
									padding 0 5px
									color #000
									transition color .3s
									&:hover
										color themeColor		
			.iconfont.icon-arrow-2
				position absolute
				color #999
				font-size 40px
				transition all .3s
				&:hover
					color themeColor
					cursor pointer
				&.arrow-left
					transform translateY(-50%) rotateZ(180deg) 
					top 50%
					left 0
				&.arrow-right
					transform translateY(-50%)
					top 50%
					right 0
	@media (max-width:970px)
		.blade-testimonials-wrap
			p.big 
				width 80%
				
