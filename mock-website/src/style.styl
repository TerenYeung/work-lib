themeColor = #aa9144
bgColor = #E8EDDF
.blade-homePage
	.blade-homePage-wrap
		position relative
		background #fff url(https://terenyeung.github.io/mywork/mock-website/src/assets/img/bg-image-2.jpg) no-repeat
		background-size cover
		height 100vh
		.blade-homePage-nav
			padding 7px 40px
			box-sizing border-box
			width 100%
			position absolute
			z-index 99
			.blade-homePage-nav-logo-2
				display none
			.blade-homePage-nav-logo
				height 61px
				float left
				img
					position relative
					top 12px
			.blade-homePage-nav-button-menu
				height 61px
				line-height 61px
				float right
				color #fff
				&:hover
					cursor pointer					
			@media (max-width:970px)
				border-bottom 1px solid #eee
				background #fff
				.blade-homePage-nav-logo-2
					display block
					.icon-menu
						font-size 30px
						vertical-align middle
						&:hover
							cursor pointer
					.nav-img
						padding-left 10px
						display inline-block
						vertical-align middle
				.blade-homePage-nav-logo
					display none
				.blade-homePage-nav-button-menu
					display none
				

		.blade-homePage-themeIntro
			width 1200px
			margin 0 auto
			padding 100px 0
			text-align center
			p.caption
				margin 40px 0
			h1
				margin 40px 0
			p.large
				width 870px
				margin 0 auto
			@media (max-width:970px)
				width 100%
				p.large
					width 80%

.blade-sidebar
	position absolute
	top 155px
	right 80px
	text-align right
	width 300px
	display none
	.blade-sidebar-list
		li
			padding 20px 0
			transition color .3s
			&:hover
				color themeColor
			a
				font 800 16px/24px "Jaapokki", Helvetica, Arial, sans-serif	
				color #000
			.icon-arrow
				display inline-block
				transform rotateZ(180deg)
	.blade-sidebar-contacts
		padding-top 80px
		li
			display inline-block
			padding 0 15px
			transition color .3s
			&:hover
				color themeColor

.blade-sidebar-left
	display none
	@media (max-width:970px)
		position fixed
		top 54px
		background #fff
		overflow auto
		.blade-sidebar-left-list
			width 250px
			li
				padding 15px 10px
				transition all .3s
				a
					color #000
				&:hover
					background themeColor
					a,.icon-arrow
						color #fff
						
				.icon-arrow
					transform rotateZ(180deg)
					float right
		.blade-sidebar-contacts
			li
				display inline-block
				padding 10px 15px
				&:hover
					color themeColor
	
